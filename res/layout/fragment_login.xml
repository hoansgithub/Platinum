<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="10dp">
   
	<LinearLayout  android:id="@+id/logout_layout" android:visibility="invisible"  android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical"  >
	    <LinearLayout android:id="@+id/manager_layout"   android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingBottom="30sp"   >
	       
	    <EditText
	 	    android:id="@+id/venue_total"
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="wrap_content"
	 	    android:hint="@string/hint_total_beer"
	 	    android:inputType="number"
 	     	android:layout_marginBottom="10sp" />   
	    <Button
 	     android:id="@+id/btn_venue_report"
	     android:layout_height="wrap_content"
	     android:layout_width="fill_parent"
	     android:text="@string/btn_venue_report"
	     android:onClick=""
	      />    
	    </LinearLayout>
	     <Button
 	     android:id="@+id/btn_logout"
	     android:layout_height="wrap_content"
	     android:layout_width="fill_parent"
	     android:text="@string/btn_logout_now"
	     android:onClick="logoutClick"
	      />
	</LinearLayout>
  	<LinearLayout android:id="@+id/login_layout" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" >
  	    <Spinner
        android:id="@+id/venue_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginBottom="10sp" />
    
    <EditText
 	    android:id="@+id/login_password"
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:hint="@string/hint_password"
 	    android:inputType="textPassword"
 	     android:layout_marginBottom="10sp" />
 	 <Button
 	     android:id="@+id/btn_login"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:text="@string/btn_login_now"
     android:onClick="loginClick" />
  	</LinearLayout>
    
</RelativeLayout>
</ScrollView>